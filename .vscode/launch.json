{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Playwright - Current File",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": [
        "test",
        "${file}",
        "--headed",
        "--workers=1",
        "--retries=0"
      ],
      "cwd": "${workspaceFolder}",
      "env": { "PWDEBUG": "1" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Playwright - All Tests",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": [
        "test",
        "--headed",
        "--workers=1",
        "--retries=0"
      ],
      "cwd": "${workspaceFolder}",
      "env": { "PWDEBUG": "1" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
